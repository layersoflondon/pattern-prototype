<div class="s-overlay--your-account--teams">

    <div class="close">
        <button class="close">Close</button>
    </div>

    <%= render "shared/overlay-subnavigation" %>

    <div class="m-account-page">

        <!--<h1>Teams</h1>-->

        <div class="section">
            <h2>Your teams</h2>
            <ul>
                <li><a href="#" class="teamlink-owner">Basingstoke Historical
                    Society</a><span class="ownership-indicator">Owner</span>
                </li>
                <!--<li><a href="#" class="teamlink-owner">Mrs. Clarkâ€™s History Class</a><span class="ownership-indicator">Owner</span></li>-->
                <li><a href="#" class="teamlink-member">Highbrook School</a></li>
                <!--<li><a href="#" class="teamlink-member">Battersea Community Centre</a></li>-->
            </ul>
        </div>

        <div class="section">
            <h2>Join a team</h2>
            <form class="form--chunky form--over-white">

                <div class="form-group">
                    <label>Search for a team</label>
                    <input type="text" placeholder="" value="Name"/>
                </div>

                <input type="submit" value="Request to join"/>

            </form>
        </div>

        <div class="section">
            <h2>Create a new team</h2>

            <form class="form--chunky form--over-white">

                <div class="form-group">
                    <label>Name</label>
                    <input type="text" placeholder="" value="Name"/>
                </div>

                <p class="helper-text">Team members can create and contribute to team collections, and they can allow their records to be editable by the whole team.</p>

                <input type="submit" value="Create team"/>

            </form>

        </div>

    </div>

</div>